{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/class/*": ["class/*"],
      "@/class": ["class/index"],
      "@/components/*": ["components/*"],
      "@/components": ["components/index"],
      "@/constants/*": ["constants/*"],
      "@/constants": ["constants/index"],
      "@/init/*": ["init/*"],
      "@/init": ["init/index"],
      "@/public/*": ["public/*"],
      "@/public": ["public/index"],
      "@/hooks/*": ["hooks/*"],
      "@/hooks": ["hooks/index"],
      "@/utils/*": ["utils/*"],
      "@/utils": ["utils/index"],
      "@/interfaces/*": ["interfaces/*"],
      "@/interfaces": ["interfaces/index"],
      "@/context/*": ["context/*"],
      "@/context": ["context/index"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "components/*",
    "hooks/*",
    "constants/*",
    "public/*"
  ],
  "exclude": ["node_modules", ".vscode"]
}
